---
interface Props {
  text: string;
  variant?: "indigo" | "pink" | "emerald" | "blue" | "primary" | "default";
}

const { text, variant = "default" } = Astro.props;

const styles = {
  indigo: "bg-indigo-500/20 border-indigo-400/30 text-indigo-200",
  pink:    "bg-pink-500/20 border-pink-400/30 text-pink-200",
  emerald: "bg-emerald-500/20 border-emerald-400/30 text-emerald-200",
  blue:    "bg-blue-600/20 border-blue-400/30 text-blue-200",
  primary: "bg-primary-500/20 border-primary-400/30 text-primary-200",
  default: "bg-white/10 border-white/20 text-white/80"
};

const selectedStyle = styles[variant] || styles.default;
---

<span class={`px-2 py-0.5 rounded-md border text-[10px] font-mono mb-2 inline-block w-fit ${selectedStyle}`}>
  {text}
</span>