---
import Image from "astro/components/Image.astro";
import Tag from "../../common/TagProject.astro";
import TechStack from "../../common/TechStack.astro";
const { cardClass } = Astro.props;
---

<article class={`${cardClass} md:col-span-2 md:row-span-1 relative overflow-visible group`}>
    
    <div class="absolute inset-0 bg-[#4a042e] rounded-[inherit] overflow-hidden z-0 border border-pink-500/20">
        <div class="absolute inset-0 bg-linear-to-t from-pink-950/90 via-transparent to-transparent z-10" />
    </div>

    <div class="flex flex-col md:flex-row justify-between h-full relative z-20 p-6 pointer-events-none">
        <div class="md:w-1/2 flex flex-col justify-center">
            <Tag text="FULL STACK" variant="pink" />
            <h3 class="text-3xl font-bold text-pink-300">TvTracker </h3>
            
            <p class="text-pink-100/80 text-m mt-2 font-medium">
                Registro y calificación de películas por usuario.
                <span class="block text-[10px] mt-1 opacity-60 uppercase tracking-widest text-pink-400">API de OMDB</span>
            </p>
            
            <div class="mt-3 flex items-center gap-2">
                <span class="text-[10px] text-pink-400 font-bold uppercase">Team:</span>
                <span class="text-xs text-pink-200">Mauricio S., Leandro R.</span>
            </div>

            <div class="mt-4">
                <TechStack techs={["NodeJS", "Express", "React", "Git", "GitHub"]} />
            </div>
        </div>
    </div>

    <div class="absolute right-0 top-1/2 z-30 -translate-y-1/2 w-1/2 translate-x-10 group-hover:translate-x-4 transition-transform duration-500 hidden md:block pointer-events-none">
        <Image
            src="https://placehold.co/400x300/601030/FFF?text=TvTracker+UI"
            alt="TvTracker Dashboard"
            width="400"
            height="300"
            class="rounded-xl shadow-2xl shadow-pink-900/50 -rotate-6 group-hover:rotate-0 transition-all duration-500 border border-pink-400/20"
        />
    </div>

    <a href="https://github.com/Desarrollo-De-Software-RB/App-BE" target="_blank" class="absolute inset-0 z-50" aria-label="Ver TvTracker"></a>
</article>